@{
    if (!WebSecurity.IsAuthenticated) {
        Response.Redirect("~/AdminError?returnUrl="
            + Request.Url.LocalPath);
            
    }
    
    Page.Title = "AWM | Edit All Pages";
}

@if ( Roles.IsUserInRole("admin")) {
    <span id="loggedUser"> Welcome <b>@WebSecurity.CurrentUserName</b>! </span>
}
else {
     Response.Redirect("~/AdminError");
}

