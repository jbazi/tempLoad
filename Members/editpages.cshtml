    <body>
    	<div class="loader">
    		<div class="spinner">
			  <div class="double-bounce1"></div>
			  <div class="double-bounce2"></div>
			</div>
    	</div>
				
		<!-- Nav Menu - START...-->
        <div class="nav-container">
			<nav class="top-bar">
				<div class="container">
                    <div class="row utility-menu">
                        <div class="col-sm-12">
                            <div class="utility-inner clearfix">
                                <span class="alt-font"><i id="AWM_logo_header" class="icon icon_globe-2"></i><strong>AWM</strong> Admin Page</span>
                                <div class="pull-right">
                                    <!--<span class="alt-font"> We Love,  We Inspire, And Promote HOPE</span>-->
                                    @if ( Roles.IsUserInRole("admin")) {
                                        <span id="loggedUser"> Welcome <b>@WebSecurity.CurrentUserName</b> <i class="fa fa-smile-o fa-1x"></i></span>
                                        <form id="logoutForm" action="~/Account/Logout" method="post" style="display: inline;">
                                            @AntiForgery.GetHtml()
                                            <span class="alt-font btn btn-primary login-button btn-xs">
                                                <a  href="~/Account/Logout" title="Click To Logout">Log out</a>
                                            </span>
                                        </form>
                                    }
                                    else {
                                         Response.Redirect("~/AdminError");
                                    }
                                </div>
                            </div>
